@{
  Layout = "_Layout";
}

@using BetterRestaurants.Models;

@if (@Model.Count == 0)
{
  <h2>There are no Cuisines yet!</h2>
}
<ul>
@foreach(Cuisine fish in Model)
{
  <li>@Html.ActionLink($"{fish.CuisineType}", "Details", "Cuisines", new { id = fish.CuisineId})</li>
}
</ul>
<p>@Html.ActionLink("Add A New Cuisine", "Create")</p>